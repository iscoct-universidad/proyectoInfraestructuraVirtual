{
    "collectCoverageFrom": [
        "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules"
    ],
    "coverageDirectory": "./spec/Reports/coverage",
    "coverageReporters": [
        "cobertura",
        "lcov"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 95,
            "functions": 95,
            "lines": 95,
            "statements": -10
        }
    },
    "errorOnDeprecated": true,
    "maxConcurrency": 20,
    "moduleFileExtensions": [ "ts", "js" ],
    "notify": true,
    "notifyMode": "always",
    "projects": ["."],
    "reporters": [
        "default",
        "jest-html-reporter",
        "jest-junit"
    ],
    "restoreMocks": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    }
}